{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": "..",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@scripts/*": [
        "./scripts/*"
      ]
    },
    "allowJs": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.js"
  ]
}
